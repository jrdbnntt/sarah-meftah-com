extend ../_layout
block vars
    - title = 'Year 2000'

block content
    .page-info
        h1 Year 2000
        p A series of works that explore photographic image-making. This project was drawn from research in the tableaux vivant throughout art history and cinema. <i>Year 2000</i> is a group of carefully arranged landscapes that capture the banality of the recent past. The images gain a sense of heightened realism through color, subtle staging, and composition.

    .page-content

block localJS
    script.
        var medImgs = [
            {    id: 1,    width: '640px',    height: '427px'    },
            {    id: 3,    width: '640px',    height: '421px'    },
            {    id: 5,    width: '640px',    height: '424px'    },
            {    id: 7,    width: '640px',    height: '427px'    },
            {    id: 8,    width: '640px',    height: '421px'    },
            {    id: 10,    width: '640px',    height: '427px'    },
            {    id: 11,    width: '640px',    height: '427px'    },
            {    id: 12,    width: '640px',    height: '423px'    },
        ];

        content = $('.page-content');

        $.each(medImgs, function(index, img) {
            content.append('<div class="art-thumb"><img src="/res/img/art/year2000/y2000-'+img.id+'-md.jpg" width="'+img.width+'" height="'+img.height+'"></div>');
        });
