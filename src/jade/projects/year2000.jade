extend ../_layout
block vars
    - title = 'Year 2000'

block content
    .page-info
        h1 Year 2000
        p Year 2000 is an exploration in photographic image-making. This project was drawn from research in the tableaux vivant throughout art history and cinema. These carefully arranged landscapes capture the banality of the recent past. From subtle staging to costuming the figures, these images capture a sense of heightened realism through everyday gestures.

    .page-content

block localJS
    script.
        var medImgs = [
            {    id: 1,    width: '640px',    height: '427px'    },
            {    id: 3,    width: '640px',    height: '421px'    },
            {    id: 5,    width: '640px',    height: '424px'    },
            {    id: 7,    width: '640px',    height: '427px'    },
            {    id: 8,    width: '640px',    height: '421px'    },
            {    id: 10,    width: '640px',    height: '427px'    },
            {    id: 11,    width: '640px',    height: '427px'    },
            {    id: 12,    width: '640px',    height: '423px'    },
        ];

        content = $('.page-content');

        $.each(medImgs, function(index, img) {
            content.append('<div class="art-thumb"><img src="/res/img/art/year2000/y2000-'+img.id+'-md.jpg" width="'+img.width+'" height="'+img.height+'"></div>');
        });
